<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_35dp"
    android:layout_height="@dimen/dimens_35dp">

    <ImageView
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        android:layout_gravity="center"
        android:src="@drawable/shop_cart_icon"/>
    
    <TextView
        android:id="@+id/count_txt"
        android:layout_width="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/badge_circle"
        android:minWidth="17dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:text="@string/empty"
        android:visibility="gone"
        android:layout_height="@dimen/dimens_16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10sp"/>

</FrameLayout>