<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dimens_35dp">

        <TextView
            android:text="@string/filter_by"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimens_2dp"
            android:textSize="@dimen/text_size_14sp"
            android:padding="@dimen/dimens_4dp"
            android:layout_marginLeft="@dimen/dimens_40dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clear"
            android:text="@string/clear"
            android:textStyle="bold"
            android:padding="@dimen/dimens_4dp"
            android:layout_marginTop="@dimen/dimens_2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_40dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/filter_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>