<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimens_1dp"
        android:layout_height="@dimen/dimens_40dp"
        android:background="@color/app_background_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/sort_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sort_image"
                android:src="@drawable/sort"
                android:layout_width="@dimen/dimens_24dp"
                android:layout_height="@dimen/dimens_24dp" />

            <TextView
                android:layout_toRightOf="@+id/sort_image"
                android:layout_marginLeft="@dimen/dimens_8dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimens_1dp"
                android:textSize="@dimen/text_size_16sp"
                android:text="@string/sort"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="@dimen/dimens_1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/filter_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/filter_image"
                android:src="@drawable/filter"
                android:layout_width="@dimen/dimens_24dp"
                android:layout_height="@dimen/dimens_24dp" />

            <TextView
                android:layout_toRightOf="@+id/filter_image"
                android:layout_marginLeft="@dimen/dimens_8dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimens_1dp"
                android:textSize="@dimen/text_size_16sp"
                android:text="@string/filter"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>

